{
    "extends": "airbnb-base",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "warn",
            {
                "code": 120,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "semi": [
            "warn",
            "never"
        ]
    },
    "env": {
        "mocha": true
    }
}
